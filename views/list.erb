<h1><%= @title %></h1>

<table border="0" cellpadding="0" cellspacing="10" class="list">
<% @list.each_with_index do |item, i| %>
	<tr<%= ' class="alt"' if i%2 == 0 %>>
		<td><a href="/item/<%= @type %>/<%= item.id %>"><%= item.text %></a></td>
		<td><a href="/delete/<%= @type %>/<%= item.id %>">delete</a></td>
<% end %>
	<tr>
		<td></td>
		<td><a href="/new/<%= @type %>">new</a></td>
</table>